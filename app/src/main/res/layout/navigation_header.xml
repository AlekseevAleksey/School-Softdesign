<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:paddingTop="24dp"
    android:background="@drawable/background_header">

    <ImageView
        android:layout_width="@dimen/drawer_header_profile_image_size"
        android:layout_height="@dimen/drawer_header_profile_image_size"
        android:id="@+id/drawer_image"
        android:paddingTop="@dimen/padding"
        android:paddingLeft="@dimen/padding"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/drawer.profile.fio"
        android:id="@+id/profile_name"
        android:paddingLeft="@dimen/padding"
        android:fontFamily="roboto medium"
        android:layout_marginTop="@dimen/padding"
        android:textSize="@dimen/drawer_font_size"
        android:textColor="@color/color_menu"
        android:layout_below="@+id/drawer_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/drawer.profile.email"
        android:id="@+id/profile_email"
        android:paddingLeft="@dimen/padding"
        android:fontFamily="roboto regular"
        android:textSize="@dimen/drawer_font_size"
        android:textColor="@color/drawer_font"
        android:layout_below="@+id/profile_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <ImageView
        android:layout_width="@dimen/drawer_status_size"
        android:layout_height="@dimen/drawer_status_size"
        android:id="@+id/drawer_status_image"
        android:layout_alignTop="@+id/drawer_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="@dimen/padding"
        android:layout_marginTop="@dimen/padding"
        android:src="@drawable/drawer_header_status"/>


    <TextView
        android:layout_width="@dimen/drawer_status_size"
        android:layout_height="@dimen/drawer_status_size"
        android:fontFamily="roboto medium"
        android:textSize="@dimen/drawer_font_size"
        android:textColor="@color/color_menu"
        android:text="@string/drawer_text"
        android:id="@+id/status_text"
        android:gravity="center"
        android:layout_alignTop="@+id/drawer_status_image"
        android:layout_alignLeft="@+id/drawer_status_image"
        android:layout_alignStart="@+id/drawer_status_image"/>




</RelativeLayout>